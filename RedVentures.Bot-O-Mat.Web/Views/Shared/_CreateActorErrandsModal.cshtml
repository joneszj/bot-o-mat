                    </div>
                    <hr />
                    <div>
                        <div class="pretty p-icon p-round p-jelly">
                            @Html.CheckBox("sweep_the_house", new { value = (int)RedVentures.Bot_O_Mat.Web.DTOs.Enums.ErrandType.sweep_the_house })
