    <div id="open-modal-errands" class="modal-window" style="z-index: 1001;">
        <input type="hidden" id="actorId" />
        <input type="hidden" id="actorType" />
        <div>
            <a href="#" title="Close" class="modal-close">Close (esc)</a>

            <form id="createActorErrandsModal">
                <div id="createActorModalFormValidationSummary" style="display:none;">
                    <ul style="color:red;list-style: none;"></ul>
                </div>
                <div>
                    <label class="fileContainer">
                        <img src="" id="actorImageErrands" height="200" width="200" alt="Image preview..." style="border-radius: 50%; display:none;">
                    </label>
                </div>

                <div>
                    Select some errands to perform!
                </div>
                <br />
                <div>
                    <div>
                        <div class="pretty p-icon p-round p-jelly">
                            @Html.CheckBox("bake_some_cookies", new { value = (int)RedVentures.Bot_O_Mat.Web.DTOs.Enums.ErrandType.bake_some_cookies })
