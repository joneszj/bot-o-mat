                                <label>Sweep the House!</label>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div>
                        <div class="pretty p-icon p-round p-jelly">
                            @Html.CheckBox("take_out_the_recycling", new { value = (int)RedVentures.Bot_O_Mat.Web.DTOs.Enums.ErrandType.take_out_the_recycling })
