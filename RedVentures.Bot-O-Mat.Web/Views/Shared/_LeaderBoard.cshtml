@model LeaderBoardViewModel
<div class="bg-img bg-img-1"></div>
<h2>Leaderboard</h2>
<div class="split left">
    <blockquote>
        <p>Top 5 performing robots</p>
        <ol>
            @foreach (var robot in Model.Robots)
            {
                <li><a href="#open-modal-detail" data-id="@robot.Id"><strong>@robot.Name</strong></a> has completed <strong>@robot.CompletedErrandCount</strong> tasks</li>
            }
        </ol>
    </blockquote>
</div>
<div class="split right">
    <blockquote>
        <p>Top 5 performing cyborgs</p>
        <ol>
            @foreach (var cyborg in Model.Cyborgs)
            {
                <li><a href="#open-modal-detail" data-id="@cyborg.Id"><strong>@cyborg.Name</strong></a> has completed <strong>@cyborg.CompletedErrandCount</strong> tasks</li>
            }
        </ol>
    </blockquote>
</div>